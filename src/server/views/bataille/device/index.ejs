        <![endif]-->
        <script type="text/javascript" src="<%= basepath %>socket.io/socket.io.js"></script>
        <script type="text/javascript" src="<%= basepath %>dist/device.js"></script>
    </head>
    <body class="device">
        <div class="container">
            hello device <%= name %> :)
            <script type="text/javascript">
                if (window.navigator.vibrate) {
                    window.navigator.vibrate([100,30,100,30,100,200,200,30,200,30,200,200,100,30,100,30,100]);
                } else {
                    alert('vibration api is not available !!');
                }
            </script>

            <button onclick="$(this).insertAfter($('<span>Vous êtes prêt</span>')).remove(); socket.emit('ready');">Je suis prêt !</button>
        </div>
    </body>

    <script type="text/javascript">
        client = "device";
        token = "<%= token %>";
        name = "<%= name %>";
    </script>
</html>
